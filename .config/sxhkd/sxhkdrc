# Volume
XF86AudioRaiseVolume
    amixer set Master 5%+ unmute
XF86AudioLowerVolume
    amixer set Master 5%- unmute
XF86AudioMute
    amixer set Master toggle

# Brightness
XF86MonBrightnessUp
    light -A 5
XF86MonBrightnessDown
    light -U 5

# Screenshot
Print
    flameshot full -c -p ~/Pictures/Screenshots  # Fullscreen capture
ctrl + Print
    flameshot gui -c -p ~/Pictures/Screenshots  # Area capture with mouse

# WeChat
ctrl + alt + w
    xdotool key --window $(xdotool search --limit 1 --all --pid $(pgrep WeChat.exe)) "ctrl+alt+W"  # Send this shortcut to WeChat

