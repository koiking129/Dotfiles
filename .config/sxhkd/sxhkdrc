# Volume
XF86Audio{Raise,Lower}Volume
    amixer set Master 5%{+,-} unmute
XF86AudioMute
    amixer set Master toggle
ctrl + alt + {equal,minus}
    amixer set Master 5%{+,-} unmute
ctrl + alt + 0
    amixer set Master toggle

# Multimedia controls
ctrl + alt + {p,bracketleft,bracketright}
    mpc {toggle,prev,next}

# Brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 5

# Screenshot
Print
    flameshot gui  # Area capture with mouse
ctrl + Print
    flameshot full -c -p ~/Pictures/Screenshots  # Fullscreen capture

# WeChat
ctrl + alt + w
    xdotool key --window $(xdotool search --limit 1 --all --pid $(pgrep WeChat.exe)) "ctrl+alt+W"  # Send this shortcut to WeChat

# Rofi run
super + r
    rofi -show run

# Power menu
super + shift + Escape
    rofi -modi Power:~/.config/rofi/power.sh -show

# Window switching
super + w
    wmctrl -x -a firefox
super + e
    wmctrl -x -a emacs
super + s
    wmctrl -x -a kitty
super + {button8,button9}
    dwmc focusstack {+,-}1

