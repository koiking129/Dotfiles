# Volume
XF86Audio{Raise,Lower}Volume
    amixer set Master 5%{+,-} unmute
XF86AudioMute
    amixer set Master toggle

# Brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 5

# Screenshot
Print
    flameshot gui  # Area capture with mouse
ctrl + Print
    flameshot full -c -p ~/Pictures/Screenshots  # Fullscreen capture

# WeChat
ctrl + alt + w
    xdotool key --window $(xdotool search --limit 1 --all --pid $(pgrep WeChat.exe)) "ctrl+alt+W"  # Send this shortcut to WeChat

# Rofi run
super + r
    rofi -show run

# Power menu
super + shift + Escape
    rofi -modi Power:~/.config/rofi/power.sh -show

# CapsLock + hjkl
hyper + h
    xdotool keyup h key Left
hyper + j
    xdotool keyup j key Down
hyper + k
    xdotool keyup k key Up
hyper + l
    xdotool keyup l key Right

# Window switching
super + w
    wmctrl -x -a firefox
super + c
    wmctrl -x -a code
super + l
    wmctrl -x -a logseq
